<% include ../partials/header%>

            <h1>Edit "<%= blog.title %>"</h1>
            <form class="ui form" action="/content/<%= blog.id %>?_method=PUT" method="POST">
                <div class="field">
                    <input name="blog[title]" value="<%= blog.title %>" type="text"></input>
                </div>
                <div class="field">
                    <input name="blog[author]" value="<%= blog.author %>" type="text"></input>
                </div>
                <div class="field">
                    <input name="blog[image]" type="text" value="<%= blog.image %>"></input>
                </div>
                <div class="field">
                    <textarea name="blog[content]" ><%= blog.content %></textarea>
                </div>
                <button class="ui secondary button" type="submit">Submit</button>
            </form>
        
<% include ../partials/footer%>