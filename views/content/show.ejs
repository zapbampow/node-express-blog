<% include ../partials/header %>


<div class="ui container">
    <div class="ui two column center stackable relaxed grid">
        <div class="sixteen wide mobile thirteen wide tablet eleven wide computer column">
            <div id="post-header" class="ui header"><%= blog.title %></div>
            
            <p class="post-meta">
                <span class="post-author"><%= blog.author %></span>
                <span class="post-date"><%= blog.date.toDateString() %></span> 
            </p>
             
             <div class="post-content">
                <img src="<%= blog.image %>" class="ui medium left floated fluid image">
                <p><%= blog.content %></p>     
             </div>   
             
             <div class="ui divider"></div>
             
             <a href="/content/<%= blog.id %>/edit" class="ui secondary button" >Edit Post</a>
             <form id="delete-post" action="/content/<%= blog.id %>?_method=DELETE" method="POST">
                 <button class="ui button">Delete Post</button>
                 
             </form>
             
             <div class="ui divider"></div>
             
             <div class="ui segment">
                 Social share section
             </div>
             <div class="ui segment">
                 Social Follow
             </div>
             <div class="ui segment">
                 Tag/category section
             </div>
             
            
        </div>
        
        <% include ../partials/sidebar%>
    
    </div>
</div>

<% include ../partials/footer %>


