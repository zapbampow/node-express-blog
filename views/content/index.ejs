<% include ../partials/header %>


        <!-- Latest Post-->
        <div id="latest-post">
          <% var latest = blog.length-1;%>

            <a href="/content/<%=blog[latest].id%>"  class="ui large header post-header">
              <%= blog[latest].title %>
            </a>

            <p class="post-meta">
              <span class="post-meta-margin"><%= moment(blog[latest].date).format('MMM DD, YYYY'); %></span>
              <span class="post-meta-margin">|</span>
              <span>By <%= blog[latest].author.name %></span>
            </p>

            <div class="post-content">
              <img src="<%= blog[latest].image %>" class="ui medium left floated fluid image">
              <% var shortContent = blog[latest].content.substring(0, 750) %>
                <p>
                  <%- shortContent %>... <a href="/content/<%= blog[latest].id %>" class="mini basic green ui button">Read more</a></p>
            </div>
        </div>

        <div class="ui hidden divider"></div>
        <div class="ui divider">

        </div>

        <!-- Other Articles section -->
        <div class="ui medium header">Other Recent Articles</div>

        <div class="ui three cards">
            <% var recentPosts = blog.slice(latest-3, latest); %>
            <% console.log(recentPosts); %>
          <% recentPosts.forEach(function(post){   %>
            <div class="card">
              <a href="/content/<%= post._id %>" class="image">
                <img src="<%= post.image %>">
             </a>
              <div class="content">
                <a href="/content/<%= post._id %>" class="ui tiny header post-header">
                  <%= post.title %>
                </a>
                <div class="meta">
                  <%= moment(post.date).format('MMM DD, YYYY') %>
                </div>
              </div>
            </div>

            <% }); %>
        </div>

        <div class="ui hidden divider"></div>
        <div class="ui divider"></div>

        <!-- Social/Share section -->
        <div class="ui segment">
          Social share section
        </div>
        <div class="ui segment">
          Social Follow
        </div>
        <div class="ui segment">
          Tag/category section
        </div>
    

     
  <% include ../partials/footer %>