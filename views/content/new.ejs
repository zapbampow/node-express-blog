<% include ../partials/header%>

            <h1>Create a new blog post</h1>
            <form class="ui form" action="/content" method="POST">
                <div class="field">
                    <input name="blog[title]" placeholder="title" type="text"></input>
                </div>

                <div class="field">
                    <input name="blog[image]" type="text" placeholder="Link to image"></input>
                </div>
                
                <div class="field">
                      <div id="category" class="ui selection dropdown">
                          <input name="blog[category]" type="hidden">
                          <i class="dropdown icon"></i>
                          <div class="default text">Category</div>
                          <div  class="menu">
                              <div class="item" data-value="general">General</div>
                              <div class="item" data-value="methods">Methods</div>
                              <div class="item" data-value="diy">DIY</div>
                              <div class="item" data-value="logs">Logs</div>
                          </div>
                      </div>
                </div>
                
                <div class="field">
                    <input name="blog[tags]" placeholder="Tags [space separated]"></input>
                </div>
                
                <div class="field">
                    <textarea name="blog[content]" placeholder="Blog content here."></textarea>
                </div>
                
                <button class="ui submit button" type="submit">Submit</button>
            </form>
       
<% include ../partials/footer%>